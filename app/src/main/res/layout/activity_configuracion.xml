<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ConfiguracionActivity">

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="255dp"
        android:layout_weight="0.5"
        android:background="?android:attr/colorEdgeEffect"
        android:drawableBottom="@drawable/ic_contacts_white_170dp"
        android:onClick="btnConfigurarContactosOnClick"
        android:paddingBottom="25dp"
        android:text="CONFIGURAR CONTACTOS"
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />

    <Button
        android:id="@+id/button6"
        android:layout_width="match_parent"
        android:layout_height="255dp"
        android:layout_weight="0.5"
        android:background="@android:color/background_light"
        android:drawableTop="@drawable/ic_message_blue_190dp"
        android:onClick="btnConfigurarMensajeOnClick"
        android:paddingTop="20dp"
        android:text="CONFIGURAR MENSAJE"
        android:textColor="#4052b5"
        android:textSize="30sp" />

</LinearLayout>